@model MJ.Web.Admin.Models.UserRegisterModel

@using (Html.BeginForm("UserRegister", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
        <div class="modal-header" style="background-color: lightcyan">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Create New User Account</h4>
        </div>
        
        <div class="modal-body">

            <div id="modalMessage"></div>
            

            <div id="conData" class="form-group">
                <div class="myTextRed">

                </div>

                <div style="margin-bottom:25px" class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    @*<input id="usernameTxt" type="text" class="form-control uni-plceholdr"
                           placeholder="username or email" style="max-width: 100%" />*@
                    @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @placeholder = "username or email" })
                </div>

                <div style="margin-bottom:25px" class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-log-in"></i>
                    </span>
                    @*<input id="passwordTxt" type="password" class="form-control uni-plceholdr"
                           placeholder="password" style="max-width: 100%" />*@
                    @Html.PasswordFor(u => u.Password, new { @class = "form-control", @placeholder = "password" })
                </div>

                <div style="margin-bottom:25px" class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-log-in"></i>
                    </span>
                    @*<input id="confPasswordTxt" type="password" class="form-control uni-plceholdr"
                           placeholder="confirm password" style="max-width: 100%" />*@
                    @Html.PasswordFor(u => u.ConfirmPassword, new { @class = "form-control", @placeholder = "confirm password" })
                </div>

            </div>

        </div>
        <div class="modal-footer">
            <button onclick="refr()" id="closeBtn" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            @*<button onclick="createAcc()" id="registerBtn" type="button" class="btn btn-primary">Submit</button>*@
            @*<input type="Submit" value="Register" class="form-control"/>*@
            <button class="btn btn-success">Register</button>
        </div>
    </div>
</div>
}